{
  "name": "adit",
  "version": "0.0.1",
  "description": "JS dependencies for ADIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medihack/adit.git"
  },
  "author": "kai.schlamp@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/medihack/adit/issues"
  },
  "homepage": "https://github.com/medihack/adit#readme",
  "dependencies": {
    "alpinejs": "^2.7.0",
    "bootstrap": "^4.5.2",
    "bootstrap-icons": "^1.0.0",
    "bootswatch": "^4.5.3",
    "jquery": "^3.5.1",
    "js-cookie": "^2.2.1",
    "morphdom": "^2.6.1"
  },
  "devDependencies": {
    "browser-sync": "^2.26.12",
    "cpy-cli": "^3.1.1"
  },
  "scripts": {
    "copy": "npm run copy:jquery && npm run copy:bootstrap && npm run copy:bootswatch && npm run copy:alpine && npm run copy:morphdom && npm run copy:cookie",
    "copy:jquery": "cpy node_modules/jquery/dist/jquery.js adit/static/vendor/",
    "copy:bootstrap_css": "cpy node_modules/bootstrap/dist/css/bootstrap.css* adit/static/vendor/",
    "copy:bootstrap_js": "cpy node_modules/bootstrap/dist/js/bootstrap.bundle.js* adit/static/vendor/",
    "copy:bootstrap": "npm run copy:bootstrap_css && npm run copy:bootstrap_js",
    "copy:bootswatch": "cpy node_modules/bootswatch/dist/darkly/bootstrap.css adit/static/vendor/",
    "copy:alpine": "cpy node_modules/alpinejs/dist/alpine*.js adit/static/vendor/",
    "copy:morphdom": "cpy node_modules/morphdom/dist/morphdom-umd.js adit/static/vendor/",
    "copy:cookie": "cpy node_modules/js-cookie/src/js.cookie.js adit/static/vendor/"
  }
}
